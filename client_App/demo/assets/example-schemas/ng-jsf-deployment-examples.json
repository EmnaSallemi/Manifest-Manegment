{
  "$schema": "http://json-schema.org/schema#",
  "description": "Deployment enables declarative updates for Pods and ReplicaSets.",
  "type": "object",
  "properties": {
    "apiVersion": {
      "description": "APIVersion defines the versioned schema of this representation of an object.",
      "default": "v1",
      "type": [
        "string",
        "null"
      ]
    },
    "kind": {
      "description": "Kind is a string value representing the REST resource this object represents.",
      "default": "Deployment",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "Deployment"
      ]
    },
    "metadata": {
      "description": "Standard object's metadata.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": ["name"]
    },
    "spec": {
      "description": "Specification of the desired behavior of the Deployment.",
      "type": "object",
      "properties": {
        "replicas": {
          "type": "integer",
          "minimum": 1
        },
        "selector": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "template": {
          "type": "object",
          "properties": {
            "metadata": {
              "$ref": "#/properties/metadata"
            },
            "spec": {
              "description": "Specification of the desired behavior of the Pod.",
              "type": "object",
              "properties": {
                "containers": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "image": {
                        "type": "string"
                      },
                      "ports": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "containerPort": {
                              "type": "integer"
                            },
                            "protocol": {
                              "type": "string",
                              "enum": ["TCP", "UDP"]
                            }
                          },
                          "required": ["containerPort"]
                        }
                      }
                    },
                    "required": ["name", "image"]
                  }
                }
              },
              "required": ["containers"]
            }
          },
          "required": ["metadata", "spec"]
        },
        "strategy": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["Recreate", "RollingUpdate"]
            }
          },
          "required": ["type"]
        }
      },
      "required": ["replicas", "selector", "template"]
    },
    "status": {
      "description": "Most recently observed status of the Deployment.",
      "type": "object"
    }
  },
  "required": ["kind", "metadata", "spec"],
  "x-kubernetes-group-version-kind": [
    {
      "group": "apps",
      "kind": "Deployment",
      "version": "v1"
    }
  ]
}
